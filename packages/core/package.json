{
  "name": "@blade-ai/core",
  "version": "1.3.0",
  "description": "Blade AI Core - 智能AI代理核心库",
  "type": "module",
  "main": "bundle/index.js",
  "types": "bundle/types/index.d.ts",
  "typesVersions": {
    "*": {
      "types": ["bundle/types/*"],
      "bundle": ["bundle/*"]
    }
  },
  "files": [
    "dist",
    "bundle"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:bundle": "node ../../scripts/build-bundle.js core",
    "build:test": "tsc --build && vitest",
    "dev": "tsc --build --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --testNamePattern=\"(unit|__tests__)\"",
    "test:integration": "vitest --testNamePattern=\"integration\"",
    "test:debug": "vitest --no-cache --verbose",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run test"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.2",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.24",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  }
}