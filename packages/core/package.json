{
  "name": "@blade-ai/core",
  "version": "1.3.0",
  "description": "Blade AI Core - 智能AI代理核心库",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:test": "tsup && vitest",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --testNamePattern=\"(unit|__tests__)\"",
    "test:integration": "vitest --testNamePattern=\"integration\"",
    "test:debug": "vitest --no-cache --verbose",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run test"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.24",
    "typescript": "^5.9.2",
    "tsup": "^8.5.0",
    "vitest": "^3.0.0"
  }
}