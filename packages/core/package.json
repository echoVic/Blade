{
  "name": "@blade-ai/core",
  "version": "1.2.8",
  "description": "Blade AI Core - 智能AI代理核心库",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:test": "tsup && jest",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"(unit|__tests__)\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:debug": "jest --no-cache --verbose --detectOpenHandles --forceExit",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run test"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.15.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2",
    "tsup": "^8.5.0"
  }
}