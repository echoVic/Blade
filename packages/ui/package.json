{
  "name": "@blade-ai/ui",
  "version": "1.0.0",
  "description": "Blade UI Component Library - React-Ink Terminal Components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run type-check && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@blade-ai/core": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ink": "^6.2.3",
    "chalk": "^5.4.1",
    "eventemitter3": "^5.0.1",
   zustand: "^5.0.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/node": "^22.15.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8",
    "@testing-library/react": "^16.2.0",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "keywords": [
    "react",
    "ink",
    "terminal",
    "cli",
    "components",
    "ui",
    "blade"
  ],
  "author": "echoVic",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}