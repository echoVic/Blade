{
  "name": "blade-ai",
  "version": "1.3.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "🗡️ Blade - 智能 AI 助手命令行工具",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blade": "bin/blade.js"
  },
  "files": [
    "dist",
    "bin",
    "config.env.example",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --build --watch",
    "build": "pnpm -r build",
    "build:bundle": "node scripts/build-bundle.js --all",
    "build:bundle:core": "node scripts/build-bundle.js core",
    "build:bundle:cli": "node scripts/build-bundle.js cli",
    "start": "node bin/blade.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --testNamePattern=\"(unit|__tests__)\"",
    "test:integration": "vitest --testNamePattern=\"integration\"",
    "test:e2e": "vitest --testNamePattern=\"e2e\"",
    "test:core": "vitest run packages/core",
    "test:ui": "vitest run packages/ui",
    "test:all": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:performance": "vitest --testNamePattern=\"performance\" --verbose",
    "test:debug": "vitest --no-cache --verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "check:full": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "security:audit": "pnpm audit",
    "security:test": "bash scripts/run-security-tests.sh",
    "security:report": "node -e \"console.log('Security report generation not yet implemented')\"",
    "release": "node scripts/release.js",
    "release:dry": "node scripts/release.js --dry-run",
    "test:generate": "node scripts/test-generator.js",
    "test:report": "node scripts/test-report.js",
    "test:summary": "node scripts/test-report.js",
    "release:major": "node scripts/release.js --major",
    "release:minor": "node scripts/release.js --minor",
    "release:patch": "node scripts/release.js --patch"
  },
  "keywords": [
    "cli",
    "blade",
    "ai",
    "assistant",
    "agent",
    "llm",
    "tool",
    "qwen",
    "volcengine",
    "smart-tools",
    "code-review",
    "documentation",
    "git-tools"
  ],
  "author": "echoVic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/echoVic/Blade.git"
  },
  "homepage": "https://github.com/echoVic/Blade",
  "bugs": {
    "url": "https://github.com/echoVic/Blade/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.24",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.0.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^3.0.1",
    "jsdom": "^26.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "ink": "^6.2.3",
    "inquirer": "^12.6.3",
    "openai": "^4.103.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ws": "^8.18.0"
  }
}