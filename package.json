{
  "name": "blade-ai",
  "version": "2.0.0",
  "description": "🗡️ Blade - 智能 AI 助手命令行工具 (LangChain 原生实现)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blade": "bin/blade.js"
  },
  "files": [
    "dist",
    "bin",
    "config.env.example",
    "README.md",
    "LANGCHAIN_MIGRATION_GUIDE.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node bin/blade.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "release": "node scripts/release.js",
    "release:dry": "node scripts/release.js --dry-run",
    "release:major": "node scripts/release.js --major",
    "release:minor": "node scripts/release.js --minor",
    "release:patch": "node scripts/release.js --patch"
  },
  "keywords": [
    "cli",
    "blade",
    "ai",
    "assistant",
    "agent",
    "llm",
    "tool",
    "qwen",
    "volcengine",
    "smart-tools",
    "code-review",
    "documentation",
    "git-tools",
    "langchain",
    "langchain-js"
  ],
  "author": "echoVic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/echoVic/Blade.git"
  },
  "homepage": "https://github.com/echoVic/Blade",
  "bugs": {
    "url": "https://github.com/echoVic/Blade/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.15.24",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@langchain/community": "^0.3.3",
    "@langchain/core": "^0.3.9",
    "@langchain/openai": "^0.3.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "inquirer": "^12.6.3",
    "langchain": "^0.3.2",
    "openai": "^5.1.0",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  }
}
