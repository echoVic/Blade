{
  "reporter": ["lcov", "text", "html", "json"],
  "report-dir": "./coverage",
  "include": [
    "**/*.{ts,tsx}",
    "**/*.{js,jsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/jest.config.*",
    "**/vitest.config.*",
    "**/tsup.config.*",
    "**/*.config.{ts,tsx}",
    "**/*.stories.{ts,tsx}",
    "**/*.example.{ts,tsx}",
    "coverage/**",
    "dist/**",
    "build/**"
  ],
  "extension": [
    ".ts",
    ".tsx",
    ".js",
    ".jsx"
  ],
  "skip-full": false,
  "all": true,
  "check-coverage": true,
  "branches": 80,
  "functions": 80,
  "lines": 80,
  "statements": 80,
  "per-file": true,
  "exclude-after-remap": false,
  "clean": true
}